<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>


<VBox prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.DeckSelectionController">
   <children>
      <Label text="Select a deck:" />
      <HBox spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <ListView fx:id="deckListView" prefWidth="250.0" />
            <Label fx:id="deckInfoLabel" text="Label" />
         </children>
      </HBox>
      <FlowPane>
         <children>
            <Button mnemonicParsing="false" onAction="#onBeginSessionButtonClicked" text="Begin Session">
               <FlowPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </FlowPane.margin>
            </Button>
         </children>
      </FlowPane>
   </children>
</VBox>
